<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:card_view="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:id="@+id/productsCartView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornedRadius="@dimen/card_product_radius"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <ImageView
        android:id="@+id/pImage"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:src="@drawable/meal1"

        />
    <TextView
        android:id="@+id/pTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lg g2"
        android:layout_alignTop="@+id/pImage"
        android:layout_toRightOf="@+id/pImage"
        android:textSize="@dimen/list_product_title"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        />
    <ImageButton
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_remove_shopping_cart_black_24dp"
        android:tint="@color/colorPrimaryDark"
        android:id="@+id/pDelete"
        android:layout_alignParentRight="true"
        android:background="@null"/>
    <TextView
        android:id="@+id/pPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/list_product_price"
        android:text="Rs.200"
        android:fontFamily="erif-monospace"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
       />
            </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>

